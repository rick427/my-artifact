{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react",
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "Node",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@ui-kit/*": ["src/*"]
    },
    "types": ["vitest", "react", "react-dom"]
  },
  "include": ["src"]
}
