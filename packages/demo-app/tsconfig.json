{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@richardnjoku/ui-kit": ["../ui-kit/src"],  // or ["../ui-kit/dist"] if you're using the build output
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"]
      
    }
  },
  "include": ["src", "global.d.ts"]
}
